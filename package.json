{
  "name": "wernerarchmover.com",
  "version": "1.0.0",
  "description": "Página web del arquitecto Werner Moser, obras ejecutadas, proyectadas e información profesional",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "global:package": "npm i -g node-sass babel-cli babel-preset-latest pug pug-cli browser-sync parallelshell rimraf mkdirp uncss postcss-cli autoprefixer buildify useref useref-cli html-minifier copy imagemin imagemin-cli imagemin-pngquant imagemin-jpeg-recompress imagemin-webp imagemin-svgo imagemin-gifsicle",
    "dev:package": "npm i -D node-sass pug pug-cli browser-sync parallelshell rimraf mkdirp uncss postcss-cli autoprefixer buildify useref useref-cli html-minifier copy imagemin imagemin-cli imagemin-pngquant imagemin-jpeg-recompress imagemin-webp imagemin-svgo imagemin-gifsicle",
    "sass": "node-sass -w -o ./src/css  ./src/sass",
    "pug": "pug -w -P -p ./src/pug/partials/ -O ./src/pug/options.json ./src/pug/templates/ -o ./src/",
    "watch:metalang": "parallelshell \"npm run sass\" \"npm run pug\"",
    "dev:serve": "browser-sync start --server --directory --startPath src  --serverStatic src --files src --reload-delay=300 --reload-debounce=500",
    "watch:devserver": "parallelshell \"npm run dev:serve\" \"npm run watch:metalang\"",
    "clean": "rimraf ./dist/*",
    "build:folders": "mkdirp ./dist/css ./dist/js ./dist/img",
    "uncssURL": "uncss https://url.com > ./dist/css/gfonts.css",
    "uncssFiles": "uncss \"./src/**/*.+(html|php)\" > ./dist/css/local_style.css",
    "uncss": "uncss -u uncss.json \"./src/**/*.+(html|php)\" > ./dist/css/style.css",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers \"> 5%, ie 10\" -r ./dist/css/style.css",
    "min:css-js": "node buildify",
    "useref": "useref \"./src/**/*.+(html|php)\" ./dist",
    "htmlmin": "html-minifier --remove-comments --collapse-whitespace --input-dir ./dist --output-dir ./dist",
    "statics": "node statics",
    "imagemin": "imagemin \"./src/img/*.+(jpg|png)\" --out-dir=./dist/img/ -p=pngquant -p=jpeg-recompress",
    "webp": "imagemin \"./dist/img/*.jpg\" -o ./dist/img/ -p=webp",
    "svgmin": "imagemin \"./dist/img/*.svg\" -o ./dist/img/ -p=svgo",
    "gifmin": "imagemin \"./dist/img/*.gif\" -o ./dist/img/ -p=gifsicle",
    "build:frontend": "npm run uncss && npm run autoprefixer && npm run min:css-js && npm run useref && npm run htmlmin",
    "build:media": "npm run statics && npm run imagemin && npm run webp && npm run svgmin && npm run gifmin",
    "build:dist": "npm run clean && npm run build:folders && npm run build:frontend && npm run build:media",
    "server": "browser-sync start --server --startPath dist --serverStatic dist --files dist --reload-delay=300 --reload-debounce=500"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garciaporto/archmover.git"
  },
  "author": "Marcos García",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garciaporto/archmover/issues"
  },
  "homepage": "http://wernerarchmover.com",
  "gh-page": "http://garciaporto.github.io/archmover",
  "devDependencies": {
    "autoprefixer": "^9.5.0",
    "browser-sync": "^2.26.3",
    "buildify": "^0.4.0",
    "copy": "^0.3.2",
    "html-minifier": "^3.5.21",
    "imagemin": "^6.1.0",
    "imagemin-cli": "^4.0.1",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-jpeg-recompress": "^6.0.0",
    "imagemin-pngquant": "^7.0.0",
    "imagemin-svgo": "^7.0.0",
    "imagemin-webp": "^5.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.11.0",
    "parallelshell": "^3.0.2",
    "postcss-cli": "^6.1.2",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.3",
    "uncss": "^0.16.2",
    "useref": "^1.4.1",
    "useref-cli": "^1.0.0"
  }
}
